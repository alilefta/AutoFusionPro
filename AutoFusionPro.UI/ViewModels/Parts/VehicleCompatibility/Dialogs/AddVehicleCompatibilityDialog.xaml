<Window x:Class="AutoFusionPro.UI.ViewModels.Parts.VehicleCompatibility.Dialogs.AddVehicleCompatibilityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFusionPro.UI.ViewModels.Parts.VehicleCompatibility.Dialogs"
        mc:Ignorable="d"
        Title="AddVehicleCompatibilityDialog" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Make Selection -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Make:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10" />
        <ComboBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="0,0,0,10"
                  x:Name="MakeComboBox"
                  DisplayMemberPath="Make"
                  SelectionChanged="MakeComboBox_SelectionChanged" />

        <!-- Model Selection -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Model:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10" />
        <ComboBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="0,0,0,10"
                  x:Name="ModelComboBox"
                  DisplayMemberPath="Model"
                  SelectionChanged="ModelComboBox_SelectionChanged"
                  IsEnabled="{Binding ElementName=MakeComboBox, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}" />

        <!-- Year Range -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Year Range:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10" />
        <Grid Grid.Row="2"
              Grid.Column="1"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      x:Name="StartYearComboBox" />
            <TextBlock Grid.Column="1"
                       Text="to"
                       Margin="10,0"
                       VerticalAlignment="Center" />
            <ComboBox Grid.Column="2"
                      x:Name="EndYearComboBox" />
        </Grid>

        <!-- Engine -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Engine:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10" />
        <ComboBox Grid.Row="3"
                  Grid.Column="1"
                  Margin="0,0,0,10"
                  x:Name="EngineComboBox"
                  IsEditable="True" />

        <!-- Notes -->
        <TextBlock x:Name="NotesTextBox"
            Grid.Row="4"
                   Grid.Column="0"
                   Text="Fitment Notes:"
                   VerticalAlignment="Top"
                   Margin="0,5,10,0" />
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="80" />

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Add"
                    Width="80"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="AddButton_Click" />
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
