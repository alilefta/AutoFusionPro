<UserControl x:Class="AutoFusionPro.UI.Views.Parts.Dialogs.AddEditPartDialogTabs.PricingAndStockTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.Parts.Dialogs"
             xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
             xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
             xmlns:spinner="clr-namespace:AutoFusionPro.UI.Controls.LoadingSpinners"
             xmlns:behaviors="clr-namespace:AutoFusionPro.UI.Resources.Behaviors"
             xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AutoFusionPro.UI.Views.Parts.Dialogs.AddEditPartDialogTabs"
             xmlns:forms="clr-namespace:AutoFusionPro.UI.Controls.Forms"
             xmlns:cards="clr-namespace:AutoFusionPro.UI.Controls.Cards"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignWidth="800"
             Background="{DynamicResource Card.Header.BackgroundBrush}"
             Foreground="{DynamicResource Text.PrimaryBrush}"
             d:DataContext="{d:DesignInstance Type=vm:AddEditPartDialogViewModel}"
             FontFamily="{DynamicResource DynamicFontFamilyRegular}"
             FlowDirection="{Binding CurrentWorkFlow}">
    <Border Padding="8">
        <ScrollViewer Padding="8,0">
            <StackPanel>
                <!-- Cost Price & Selling Price-->
                <Grid Margin="8,20,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Cost Price -->
                    <StackPanel VerticalAlignment="Center"
                                ToolTip="{DynamicResource CostPriceTooltipMessageStr}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="Money24"
                                              VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="{DynamicResource CostPriceStr}"
                                       Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                       VerticalAlignment="Center"
                                       ToolTip="{DynamicResource CostPriceTooltipMessageStr}" />
                            <TextBlock Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyMedium}" Foreground="{DynamicResource Text.SecondaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="(" />
                                <Run Text="{DynamicResource InStr}" />
                                <Run Text="{Binding CurrentCurrencyFullName}" />
                                <Run Text=")" />
                            </TextBlock>
                        </StackPanel>
                        <wpfUi:NumberBox Value="{Binding CostPrice, UpdateSourceTrigger=PropertyChanged}"
                                         Minimum="0"
                                         Margin="0,8,0,0"
                                         PlaceholderText="{DynamicResource CostPriceExampleStr }"
                                         ToolTip="{DynamicResource CostPriceTooltipMessageStr}" />

                    </StackPanel>

                    <!-- Selling Price -->
                    <StackPanel Grid.Column="2"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="Money24"
                                              VerticalAlignment="Center"
                                              FontSize="16" />
                            <TextBlock Text="{DynamicResource SellingPriceStr}"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                       ToolTip="{DynamicResource SellingPriceTooltipMessageStr}" />
                            <TextBlock Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                       Foreground="{DynamicResource Text.SecondaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="(" />
                                <Run Text="{DynamicResource InStr}" />
                                <Run Text="{Binding CurrentCurrencyFullName}" />
                                <Run Text=")" />
                            </TextBlock>
                        </StackPanel>
                        <wpfUi:NumberBox Value="{Binding SellingPrice, UpdateSourceTrigger=PropertyChanged}"
                                         Minimum="0"
                                         Margin="0,8,0,0"
                                         PlaceholderText="{DynamicResource SellingPriceExampleStr}"
                                         ToolTip="{DynamicResource SellingPriceTooltipMessageStr}" />
                    </StackPanel>


                </Grid>

                <!-- Initial Stock, Reorder level-->
                <Grid Margin="8,20,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Reorder level -->
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="NumberSymbol48"
                                              VerticalAlignment="Center" />
                            <TextBlock Text="{DynamicResource ReorderLevelStr}"
                                       Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                       VerticalAlignment="Center"
                                       ToolTip="{DynamicResource ReorderLevelToolTipStr}" />
                        </StackPanel>
                        <wpfUi:NumberBox Value="{Binding ReorderLevel, UpdateSourceTrigger=PropertyChanged}"
                                         Minimum="0"
                                         Margin="0,8,0,0"
                                         PlaceholderText="{DynamicResource ReorderLevelPlaceholderStr }"
                                         ToolTip="{DynamicResource ReorderLevelToolTipStr}" />

                    </StackPanel>

                    <!-- Minimum Stock -->
                    <StackPanel VerticalAlignment="Center"
                                Grid.Column="2">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="NumberSymbol48"
                                              VerticalAlignment="Center" />
                            <TextBlock Text="{DynamicResource MinimumStockStr}"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                       ToolTip="{DynamicResource MinimumStockToolTipStr}" />
                        </StackPanel>
                        <wpfUi:NumberBox Value="{Binding MinimumStock, UpdateSourceTrigger=PropertyChanged}"
                                         Minimum="0"
                                         Margin="0,8,0,0"
                                         PlaceholderText="{DynamicResource MinimumStockPlaceholderStr}"
                                         ToolTip="{DynamicResource MinimumStockToolTipStr}" />
                    </StackPanel>

                    <!-- Initial Stock -->
                    <StackPanel VerticalAlignment="Center"
                                Grid.Column="4"
                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToInverseVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <!-- TODO : Change the currency dynamically-->
                            <wpfUi:SymbolIcon Symbol="NumberSymbol48"
                                              VerticalAlignment="Center" />
                            <TextBlock Text="{DynamicResource InitialStockQuantityStr}"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                       ToolTip="{DynamicResource InitialStockQuantityTooltipMessageStr}" />
                        </StackPanel>
                        <wpfUi:NumberBox Value="{Binding InitialStockQuantity, UpdateSourceTrigger=PropertyChanged}"
                                         Minimum="0"
                                         Margin="0,8,0,0"
                                         PlaceholderText="{DynamicResource InitialStockQuantityPlaceholderStr}"
                                         ToolTip="{DynamicResource InitialStockQuantityTooltipMessageStr}" />
                    </StackPanel>
                </Grid>

                <GroupBox Margin="0,20,0,0"
                          Padding="8,10">
                    <GroupBox.Header>
                        <TextBlock Text="{DynamicResource UnitsOfMeasuresStr}"
                                   FontFamily="{DynamicResource DynamicFontFamilyBold}" />
                    </GroupBox.Header>
                    <StackPanel>
                        <!-- Stocking Unit of Measure-->
                        <Grid Width="400"
                              HorizontalAlignment="Left">
                            <ComboBox ItemsSource="{Binding AvailableUnitOfMeasures}"
                                      x:Name="stockingUOMCombo"
                                      SelectedItem="{Binding SelectedStockingUnitOfMeasure}"
                                      Panel.ZIndex="0"
                                      ToolTip="{DynamicResource StockingUnitOfMeasureToolTipStr}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <wpfUi:TextBlock Text="{DynamicResource SelectUnitStr}"
                                             IsHitTestVisible="False"
                                             FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                             FontSize="14"
                                             Padding="8,5"
                                             Margin="5,0,0,0"
                                             VerticalAlignment="Center"
                                             Foreground="{DynamicResource GrayBrush}"
                                             Panel.ZIndex="1">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=stockingUOMCombo,Path=SelectedItem}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </wpfUi:TextBlock>
                        </Grid>

                        <!-- Info Label -->
                        <Border Padding="10,12"
                                Margin="0,20,0,0"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Border.BorderBrush>
                                <DrawingBrush Viewport="0,0,8,8"
                                              ViewportUnits="Absolute"
                                              TileMode="Tile">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="{DynamicResource Border.AccentBrush}">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,50,50" />
                                                        <RectangleGeometry Rect="50,50,50,50" />
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <wpfUi:SymbolIcon Symbol="Info24"
                                                      Foreground="{DynamicResource Border.AccentBrush}"
                                                      VerticalAlignment="Center" />
                                    <TextBlock Text="{DynamicResource UnitOfMeasureInfoStr}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="{StaticResource FontSizeMedium}"
                                               FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                               Foreground="{DynamicResource Border.AccentBrush}" />
                                </StackPanel>

                                <TextBlock Text="{DynamicResource StockingUOMInfoStr}"
                                           Grid.Column="2"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontFamily="{DynamicResource DynamicFontFamilyRegular}"
                                           Foreground="{DynamicResource Border.AccentBrush}" />
                            </Grid>
                        </Border>

                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Sales Unit of Measure -->
                            <StackPanel>
                                <TextBlock Text="{DynamicResource SalesUnitOfMeasureStr}"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource DynamicFontFamilyBold}" />
                                <!-- Sales Unit of Measure-->
                                <Grid Margin="0,8,0,0">
                                    <ComboBox ItemsSource="{Binding AvailableSalesUnitOfMeasures}"
                                              x:Name="salesUOMCombo"
                                              SelectedItem="{Binding SelectedSalesUnitOfMeasure}"
                                              Panel.ZIndex="0"
                                              ToolTip="{DynamicResource StockingUnitOfMeasureToolTipStr}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <wpfUi:TextBlock Text="{DynamicResource SelectUnitStr}"
                                                     IsHitTestVisible="False"
                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                     FontSize="14"
                                                     Padding="8,5"
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource GrayBrush}"
                                                     Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=salesUOMCombo,Path=SelectedItem}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </wpfUi:TextBlock>
                                </Grid>

                                <!-- Sales Factor  -->
                                <!-- TODO Add Visibility if the selected Sales UOM is different from Stock -->
                                <StackPanel VerticalAlignment="Center"
                                            Margin="0,15,0,0"
                                            Visibility="{Binding IsSalesUoMDifferent, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Grid.Column="2">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfUi:SymbolIcon Symbol="NumberSymbol48"
                                                          VerticalAlignment="Center" />
                                        <TextBlock Text="{DynamicResource SalesConversionFactorStr}"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0,0,0"
                                                   FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                                   ToolTip="{DynamicResource SalesConversionFactorToolTipStr}" />
                                    </StackPanel>
                                    <wpfUi:NumberBox Value="{Binding SalesConversionFactor, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                     Margin="0,8,0,0"
                                                     PlaceholderText="{DynamicResource SalesConversionFactorPlaceholderStr}"
                                                     ToolTip="{DynamicResource SalesConversionFactorToolTipStr}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Purchase Unit of Measure -->
                            <StackPanel Grid.Column="2">
                                <!-- Purchase Unit of Measure-->
                                <TextBlock Text="{DynamicResource PurchaseUnitOfMeasureStr}"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource DynamicFontFamilyBold}" />
                                <Grid Margin="0,8,0,0">
                                    <ComboBox ItemsSource="{Binding AvailablePurchaseUnitOfMeasures}"
                                              x:Name="purchaseUOMCombo"
                                              SelectedItem="{Binding SelectedPurchaseUnitOfMeasure}"
                                              Panel.ZIndex="0"
                                              ToolTip="{DynamicResource PurchaseUnitOfMeasureToolTipStr}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <wpfUi:TextBlock Text="{DynamicResource SelectUnitStr}"
                                                     IsHitTestVisible="False"
                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                     FontSize="14"
                                                     Padding="8,5"
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource GrayBrush}"
                                                     Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=purchaseUOMCombo,Path=SelectedItem}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </wpfUi:TextBlock>
                                </Grid>

                                <!-- Purchase Factor  -->
                                <!-- TODO Add Visibility if the selected Sales UOM is different from Stock -->
                                <StackPanel VerticalAlignment="Center"
                                            Margin="0,15,0,0"
                                            Visibility="{Binding IsPurchaseUoMDifferent, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Grid.Column="2">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfUi:SymbolIcon Symbol="NumberSymbol48"
                                                          VerticalAlignment="Center" />
                                        <TextBlock Text="{DynamicResource PurchaseUnitOfMeasureStr}"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0,0,0"
                                                   FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                                   ToolTip="{DynamicResource PurchaseConversionFactorToolTipStr}" />
                                    </StackPanel>
                                    <wpfUi:NumberBox Value="{Binding PurchaseConversionFactor, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                     Margin="0,8,0,0"
                                                     PlaceholderText="{DynamicResource PurchaseConversionFactorPlaceholderStr}"
                                                     ToolTip="{DynamicResource PurchaseConversionFactorToolTipStr}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
