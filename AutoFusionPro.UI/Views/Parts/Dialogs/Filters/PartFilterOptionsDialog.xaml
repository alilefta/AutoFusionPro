<Window x:Class="AutoFusionPro.UI.Views.Parts.Dialogs.Filters.PartFilterOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.Parts.Dialogs.Filters"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
        xmlns:dtos="clr-namespace:AutoFusionPro.Application.DTOs.CompatibleVehicleDTOs;assembly=AutoFusionPro.Application"
        xmlns:spinner="clr-namespace:AutoFusionPro.UI.Controls.LoadingSpinners"
        xmlns:behaviors="clr-namespace:AutoFusionPro.UI.Resources.Behaviors"
        xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AutoFusionPro.UI.Views.Parts.Dialogs.Filters"
        xmlns:forms="clr-namespace:AutoFusionPro.UI.Controls.Forms"
        xmlns:cards="clr-namespace:AutoFusionPro.UI.Controls.Cards"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Card.Header.BackgroundBrush}"
        Foreground="{DynamicResource Text.PrimaryBrush}"
        Title="{DynamicResource ChnageFilterOptionsStr}"
        Height="650" 
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance Type=vm:PartFilterOptionsDialogViewModel}"
        FontFamily="{DynamicResource DynamicFontFamilyRegular}"
        FlowDirection="{Binding CurrentWorkFlow}">

    <Window.Resources>
        <DropShadowEffect x:Key="WindowShadow"
                          BlurRadius="15"
                          Direction="0"
                          ShadowDepth="3"
                          Opacity="0.5"
                          Color="#202020" />
        <Style x:Key="FieldLabel"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyBold}" />
            <Setter Property="FontSize"
                    Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Card.Header.ForegroundBrush}" />
            <Setter Property="Opacity"
                    Value="0.9" />
        </Style>
        <Style x:Key="FilterGroupHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyBold}" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Text.PrimaryBrush}" />
            <Setter Property="Margin"
                    Value="0,0,0,10" />
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8"
            Background="{DynamicResource Card.Header.BackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Card.BorderBrush}"
            Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="{DynamicResource Window.BackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                    <wpfUi:SymbolIcon Symbol="Filter24"
                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                      FontSize="18"
                                      Margin="0,0,8,0" />
                    <TextBlock Text="{DynamicResource FilterContentStr}"
                               FontSize="14"
                               FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                               Foreground="{DynamicResource Text.PrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <Grid Grid.Column="1"
                      Background="Transparent"
                      WindowChrome.IsHitTestVisibleInChrome="False" />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0">
                    <Button Width="30"
                            Height="30"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource {x:Type Button}}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="4">
                                    <wpfUi:SymbolIcon x:Name="icon"
                                                      Symbol="Dismiss48"
                                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                                      FontSize="12" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#E81123" />
                                        <Setter TargetName="icon"
                                                Property="Foreground"
                                                Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- General Filters -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{DynamicResource GeneralFiltersStr}"
                                       Style="{StaticResource FilterGroupHeader}" />

                            <GroupBox Header="{DynamicResource CategoryAndSupplierStr}"
                                      Padding="10">
                                <StackPanel>
                                    <!-- Category -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource CategoryStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsCategorySelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Categories}"
                                                  SelectedItem="{Binding SelectedCategory}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <xBtn:XButton Command="{Binding ClearSelectedCategoryCommand}" Margin="10,0,0,0"
                                                      Visibility="{Binding IsCategorySelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                      ButtonType="Danger"
                                                      Style="{DynamicResource RegularButtonStyle}"
                                                      Grid.Column="2">
                                            <TextBlock Text="{DynamicResource ClearStr}" />
                                        </xBtn:XButton>
                                    </Grid>

                                    <!-- Manufacturer -->
                                    <TextBlock Text="{DynamicResource ManufacturerStr}"
                                               Style="{StaticResource FieldLabel}"
                                               Margin="0,10,0,0" />
                                    <wpfUi:TextBox Text="{Binding Manufacturer}"
                                                   PlaceholderText="{DynamicResource SearchByManufacturerNameStr}"
                                                   Margin="0,5,0,0" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="{DynamicResource PriceRangeStr}"
                                      Padding="10"
                                      Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource MinPriceStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <wpfUi:NumberBox Value="{Binding MinSellingPrice, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                       Margin="0,5,0,0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{DynamicResource MaxPriceStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <wpfUi:NumberBox Value="{Binding MaxSellingPrice, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                       Margin="0,5,0,0" />
                                    </StackPanel>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="{DynamicResource StockAndStatusStr}"
                                      Padding="10"
                                      Margin="0,10,0,0">
                                <StackPanel>
                                    <!-- Stock Status -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource StockStatusStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsStockStatusSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding StockStatusOptions}"
                                                  SelectedItem="{Binding SelectedStockFilter}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding title}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <xBtn:XButton Command="{Binding ClearSelectedStockFilterStatusCommand}" Margin="10,0,0,0"
                                                      Visibility="{Binding IsStockStatusSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                      ButtonType="Danger"
                                                      Style="{DynamicResource RegularButtonStyle}"
                                                      Grid.Column="2">
                                            <TextBlock Text="{DynamicResource ClearStr}" />
                                        </xBtn:XButton>
                                    </Grid>

                                    <!-- Originality -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterPartsByOriginalityStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsOriginalSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding ShowPartsByOriginalityFilterDtos}"
                                                  SelectedItem="{Binding SelectedOriginalityOption}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding title}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <xBtn:XButton Command="{Binding ClearSelectedShowByOriginalityCommand}" Margin="10,0,0,0"
                                                      Visibility="{Binding IsOriginalSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                      ButtonType="Danger"
                                                      Style="{DynamicResource RegularButtonStyle}"
                                                      Grid.Column="2">
                                            <TextBlock Text="{DynamicResource ClearStr}" />
                                        </xBtn:XButton>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="{DynamicResource SortingOptionsStr}"
                                      Padding="10"
                                      Margin="0,10,0,0">
                                <StackPanel>
                                    <!-- Sort By -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource SortByStr}"
                                                   Style="{StaticResource FieldLabel}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsSortBySelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding SortByOptions}"
                                                  SelectedItem="{Binding SortBy}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding title}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <xBtn:XButton Command="{Binding ClearSelectedSortByCommand}" Margin="10,0,0,0"
                                                      Visibility="{Binding IsSortBySelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                      ButtonType="Danger"
                                                      Style="{DynamicResource RegularButtonStyle}"
                                                      Grid.Column="2">
                                            <TextBlock Text="{DynamicResource ClearStr}" />
                                        </xBtn:XButton>
                                    </Grid>

                                    <!-- Sort Direction -->
                                    <TextBlock Text="{DynamicResource SortDirectionStr}"
                                               Style="{StaticResource FieldLabel}"
                                               Margin="0,10,0,0" />
                                    <CheckBox IsChecked="{Binding IsSortAscending}"
                                              Content="{DynamicResource AscendingStr}"
                                              Margin="0,5,0,0" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>

                        <!-- Vehicle Filters -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{DynamicResource VehicleFiltersStr}"
                                       Style="{StaticResource FilterGroupHeader}" />

                            <wpfUi:CardExpander>
                                <wpfUi:CardExpander.Header>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterByMakeModelTrimStr}" />
                                        <Ellipse Width="10" 
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsMakeModelTrimFilterActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                </wpfUi:CardExpander.Header>
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{DynamicResource MakeStr}"
                                                       Style="{StaticResource FieldLabel}" />
                                            <ComboBox ItemsSource="{Binding MakesCollection}"
                                                      SelectedItem="{Binding SelectedMake}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Name}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="{DynamicResource ModelStr}"
                                                       Style="{StaticResource FieldLabel}" />
                                            <ComboBox ItemsSource="{Binding ModelsCollection}"
                                                      SelectedItem="{Binding SelectedModel}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Name}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="{DynamicResource TrimLevelStr}"
                                                       Style="{StaticResource FieldLabel}" />
                                            <ComboBox ItemsSource="{Binding TrimLevelsCollection}"
                                                      SelectedItem="{Binding SelectedTrimLevel}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Name}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                    <xBtn:XButton Command="{Binding ClearSelectedMakeCommand}"
                                                  Visibility="{Binding IsMakeModelTrimFilterActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ButtonType="Danger"
                                                  Style="{DynamicResource RegularButtonStyle}"
                                                  Margin="0,10,0,0">
                                        <TextBlock Text="{DynamicResource ClearStr}" />
                                    </xBtn:XButton>
                                </StackPanel>
                            </wpfUi:CardExpander>

                            <wpfUi:CardExpander Margin="0,10,0,0">
                                <wpfUi:CardExpander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterByYearStr}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsExactYearSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                </wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding YearsCollection}"
                                              SelectedItem="{Binding SelectedExactYear}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <xBtn:XButton Command="{Binding ClearSelectedYearCommand}"
                                                  Visibility="{Binding IsExactYearSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ButtonType="Danger"
                                                  Style="{DynamicResource RegularButtonStyle}"
                                                  Grid.Column="2">
                                        <TextBlock Text="{DynamicResource ClearStr}" />
                                    </xBtn:XButton>
                                </Grid>
                            </wpfUi:CardExpander>

                            <wpfUi:CardExpander Margin="0,10,0,0">
                                <wpfUi:CardExpander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterByTransmissionTypesStr}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsTransmissionTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                </wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding TransmissionTypesCollection}"
                                              SelectedItem="{Binding SelectedTransmission}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <xBtn:XButton Command="{Binding ClearSelectedTransmissionTypeCommand}"
                                                  Visibility="{Binding IsTransmissionTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ButtonType="Danger"
                                                  Style="{DynamicResource RegularButtonStyle}"
                                                  Grid.Column="2">
                                        <TextBlock Text="{DynamicResource ClearStr}" />
                                    </xBtn:XButton>
                                </Grid>
                            </wpfUi:CardExpander>

                            <wpfUi:CardExpander Margin="0,10,0,0">
                                <wpfUi:CardExpander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterByEngineTypesStr}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsEngineTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                </wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding EngineTypesCollection}"
                                              SelectedItem="{Binding SelectedEngineType}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <xBtn:XButton Command="{Binding ClearSelectedEngineTypeCommand}"
                                                  Visibility="{Binding IsEngineTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ButtonType="Danger"
                                                  Style="{DynamicResource RegularButtonStyle}"
                                                  Grid.Column="2">
                                        <TextBlock Text="{DynamicResource ClearStr}" />
                                    </xBtn:XButton>
                                </Grid>
                            </wpfUi:CardExpander>

                            <wpfUi:CardExpander Margin="0,10,0,0">
                                <wpfUi:CardExpander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource FilterByBodyTypesStr}" />
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{DynamicResource Border.ErrorBrush}"
                                                 Visibility="{Binding IsBodyTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Grid.Column="1"
                                                 Margin="10,0" />
                                    </Grid>
                                </wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding BodyTypesCollection}"
                                              SelectedItem="{Binding SelectedBodyType}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <xBtn:XButton Command="{Binding ClearSelectedBodyTypeCommand}"
                                                  Visibility="{Binding IsBodyTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ButtonType="Danger"
                                                  Style="{DynamicResource RegularButtonStyle}"
                                                  Grid.Column="2">
                                        <TextBlock Text="{DynamicResource ClearStr}" />
                                    </xBtn:XButton>
                                </Grid>
                            </wpfUi:CardExpander>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            HorizontalAlignment="Right">
                    <xBtn:XButton Style="{DynamicResource RegularButtonStyle}"
                                  ButtonType="Secondary"
                                  Command="{Binding ResetAndClearFiltersCommand}"
                                  Visibility="{Binding AnyFilterSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="0,0,10,0">
                        <TextBlock Text="{DynamicResource ClearAllFiltersStr}" />
                    </xBtn:XButton>
                    <xBtn:XButton Style="{DynamicResource RegularButtonStyle}"
                                  ButtonType="Primary"
                                  Command="{Binding ApplyFiltersCommand}"
                                  IsLoading="{Binding IsSearching}">
                        <TextBlock Text="{DynamicResource ApplyFiltersStr}" />
                    </xBtn:XButton>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>