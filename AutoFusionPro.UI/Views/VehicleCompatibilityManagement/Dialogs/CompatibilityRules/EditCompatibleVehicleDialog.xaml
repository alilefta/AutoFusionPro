<Window x:Class="AutoFusionPro.UI.Views.VehicleCompatibilityManagement.Dialogs.CompatibilityRules.EditCompatibleVehicleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.VehicleCompatibilityManagement.Dialogs.CompatibilityRules"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
        xmlns:cards="clr-namespace:AutoFusionPro.UI.Controls.Cards"
        xmlns:spinner="clr-namespace:AutoFusionPro.UI.Controls.LoadingSpinners"
        xmlns:behaviors="clr-namespace:AutoFusionPro.UI.Resources.Behaviors"
        xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AutoFusionPro.UI.Views.Vehicles.Dialogs"
        xmlns:forms="clr-namespace:AutoFusionPro.UI.Controls.Forms"
        xmlns:dtos="clr-namespace:AutoFusionPro.Application.DTOs.CompatibleVehicleDTOs;assembly=AutoFusionPro.Application"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Card.Header.BackgroundBrush}"
        Foreground="{DynamicResource Text.PrimaryBrush}"
        Title="{DynamicResource EditCompatibleVehicleStr}"
        Height="550"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance Type=vm:EditCompatibilityRuleDialogViewModel}"
        FontFamily="{DynamicResource DynamicFontFamilyRegular}"
        FlowDirection="{Binding CurrentWorkFlow}">
    <Window.Resources>
        <DropShadowEffect x:Key="WindowShadow"
                          BlurRadius="15"
                          Direction="0"
                          ShadowDepth="3"
                          Opacity="0.5"
                          Color="#202020" />

        <Style x:Key="FieldLabel"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyBold}" />
            <Setter Property="FontSize"
                    Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Card.Header.ForegroundBrush}" />
            <Setter Property="Opacity"
                    Value="0.9" />

        </Style>

        <Style x:Key="RequiredStarLabel"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyRegular}" />
            <Setter Property="FontSize"
                    Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Border.ErrorBrush}" />
            <Setter Property="Opacity"
                    Value="0.9" />
            <Setter Property="Margin"
                    Value="4,0,0,0" />
            <Setter Property="VerticalAlignment"
                    Value="Top" />

        </Style>

        <Style x:Key="OptionalLabel"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyRegular}" />
            <Setter Property="FontSize"
                    Value="{StaticResource FontSizeSmall}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Text.SecondaryBrush}" />
            <Setter Property="Opacity"
                    Value="0.9" />
            <Setter Property="Margin"
                    Value="5,0,0,0" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />

        </Style>

    </Window.Resources>

    <!-- Window Chrome for custom title bar behavior -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8"
            Background="{DynamicResource Card.Header.BackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Card.BorderBrush}"
            Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!-- Custom title bar -->
                <RowDefinition Height="*" />
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0"
                  Background="{DynamicResource Window.BackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title and Icon -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                    <wpfUi:SymbolIcon Symbol="VehicleCar48"
                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                      FontSize="18"
                                      Margin="0,0,8,0" />
                    <TextBlock Text="{DynamicResource EditCompatibleVehicleStr}"
                               FontSize="14"
                               FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                               Foreground="{DynamicResource Text.PrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Draggable region -->
                <Grid Grid.Column="1"
                      Background="Transparent"
                      WindowChrome.IsHitTestVisibleInChrome="False" />

                <!-- Window control buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0">
                    <!-- Close button -->
                    <Button Width="30"
                            Height="30"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource {x:Type Button}}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="4">
                                    <wpfUi:SymbolIcon x:Name="icon"
                                                      Symbol="Dismiss48"
                                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                                      FontSize="12" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#E81123" />
                                        <Setter TargetName="icon"
                                                Property="Foreground"
                                                Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>


            <!-- Main Content -->
            <Grid Grid.Row="1"
                  Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Step Indicator -->
                    <RowDefinition Height="*" />
                    <!-- Content -->
                    <RowDefinition Height="Auto" />
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <!--<TextBlock Grid.Row="0"
                           Text="Add New Vehicle"
                           FontSize="20"
                           Foreground="{DynamicResource Text.PrimaryBrush}"
                           FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                           Margin="10,5,5,10" />-->

                <!-- Step Indicator -->
                <Grid Grid.Row="0"
                      Margin="0,20,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Step 1 -->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <Border Width="40"
                                Height="40"
                                CornerRadius="20">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background"
                                            Value="{DynamicResource StepIndicator.Default.Background}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=BasicInfo}"
                                                     Value="True">
                                            <Setter Property="Background"
                                                    Value="{DynamicResource StepIndicator.Current.Background}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                     Value="True">
                                            <!-- If BasicInfo is passed when current is TechnicalDetails -->
                                            <Setter Property="Background"
                                                    Value="{DynamicResource StepIndicator.Passed.Background}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize"
                                                Value="{StaticResource FontSizeMedium}" />
                                        <Setter Property="FontFamily"
                                                Value="{DynamicResource DynamicFontFamilyMedium}" />
                                        <Setter Property="Foreground"
                                                Value="{DynamicResource StepIndicator.Default.Foreground}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=BasicInfo}"
                                                         Value="True">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource StepIndicator.Current.Foreground}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                         Value="True">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource StepIndicator.Passed.Foreground}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                        <TextBlock Text="{DynamicResource BasicInfoStr}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily"
                                            Value="{DynamicResource DynamicFontFamilyMedium}" />
                                    <Setter Property="FontSize"
                                            Value="{StaticResource FontSizeRegular}" />
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource StepIndicator.Default.Foreground}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=BasicInfo}"
                                                     Value="True">
                                            <Setter Property="FontWeight"
                                                    Value="SemiBold" />
                                            <Setter Property="Foreground"
                                                    Value="{DynamicResource StepIndicator.Current.HeadingForeground}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                     Value="True">
                                            <Setter Property="FontWeight"
                                                    Value="Normal" />
                                            <!-- Or keep SemiBold if you like -->
                                            <Setter Property="Foreground"
                                                    Value="{DynamicResource StepIndicator.Passed.Background}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!-- Connector 1-2 -->
                    <Line Grid.Column="1"
                          X1="0"
                          Y1="20"
                          X2="300"
                          Y2="20"
                          StrokeThickness="2"
                          HorizontalAlignment="Right">
                        <Line.Style>
                            <Style TargetType="Line">
                                <Setter Property="Stroke"
                                        Value="{DynamicResource StepIndicator.Default.Background}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                 Value="True">
                                        <Setter Property="Stroke"
                                                Value="{DynamicResource StepIndicator.Passed.Background}" />
                                    </DataTrigger>
                                    <!-- Could also add a trigger if CurrentStep is BasicInfo to keep it default color -->
                                </Style.Triggers>
                            </Style>
                        </Line.Style>
                    </Line>

                    <!-- Step 2 -->
                    <StackPanel Grid.Column="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <Border Width="40"
                                Height="40"
                                CornerRadius="20">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background"
                                            Value="{DynamicResource StepIndicator.Default.Background}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                     Value="True">
                                            <Setter Property="Background"
                                                    Value="{DynamicResource StepIndicator.Current.Background}" />
                                        </DataTrigger>
                                        <!-- No "Passed" state for step 2 in a 2-step wizard if it's the last step -->
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground"
                                                Value="{DynamicResource StepIndicator.Default.Foreground}" />
                                        <Setter Property="FontFamily"
                                                Value="{DynamicResource DynamicFontFamilyMedium}" />
                                        <Setter Property="FontSize"
                                                Value="{StaticResource FontSizeMedium}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                         Value="True">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource StepIndicator.Current.Foreground}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                        <TextBlock Text="{DynamicResource TechnicialDetailsStr}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily"
                                            Value="{DynamicResource DynamicFontFamilyMedium}" />
                                    <Setter Property="FontSize"
                                            Value="{StaticResource FontSizeRegular}" />
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource StepIndicator.Default.Heading}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TechnicalDetails}"
                                                     Value="True">
                                            <Setter Property="FontWeight"
                                                    Value="SemiBold" />
                                            <Setter Property="Foreground"
                                                    Value="{DynamicResource StepIndicator.Current.HeadingForeground}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1">
                    <Border BorderThickness="1"
                            CornerRadius="8"
                            Padding="0">
                        <Grid>
                            <!-- Step 1: Basic Info -->
                            <Grid Visibility="{Binding BasicInfoVisibility}">
                                <cards:FormCard IsRequired="True">
                                    <cards:FormCard.Header>
                                        <TextBlock Text="{DynamicResource BasicVehicleInfoStr}"
                                                   FontSize="{StaticResource FontSizeMedium}"
                                                   FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                                   Opacity="0.9" />
                                    </cards:FormCard.Header>

                                    <StackPanel Margin="10">
                                        <!-- Makes and Models-->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Make -->
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource MakeStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="*"
                                                               Style="{DynamicResource RequiredStarLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox ItemsSource="{Binding MakesCollection}"
                                                              x:Name="makesCombo"
                                                              SelectedItem="{Binding SelectedMake}"
                                                              Panel.ZIndex="0">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:MakeDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=makesCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Model -->
                                            <StackPanel Grid.Column="2">
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource ModelStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="*"
                                                               Style="{DynamicResource RequiredStarLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox ItemsSource="{Binding ModelsCollection}"
                                                              x:Name="modelsCombo"
                                                              SelectedItem="{Binding SelectedModel}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:ModelDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=modelsCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>

                                        </Grid>

                                        <!-- Start/ End Year-->
                                        <Grid Margin="0,20,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <!-- Start Year -->
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource StartYearStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="*"
                                                               Style="{DynamicResource RequiredStarLabel}" />
                                                </StackPanel>
                                                <forms:CustomCombobox ItemsSource="{Binding YearsCollection}"
                                                                      SelectedItem="{Binding SelectedStartYear, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="2">
                                                <!-- End Year -->
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource EndYearStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="*"
                                                               Style="{DynamicResource RequiredStarLabel}" />
                                                </StackPanel>
                                                <forms:CustomCombobox ItemsSource="{Binding YearsCollection}"
                                                                      SelectedItem="{Binding SelectedEndYear, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </cards:FormCard>
                            </Grid>

                            <!-- Step 2: Technical Details -->
                            <Grid Visibility="{Binding TechnicalDetailsVisibility}">
                                <cards:FormCard IsRequired="True">
                                    <cards:FormCard.Header>
                                        <TextBlock Text="{DynamicResource TechnicialDetailsStr}"
                                                   FontSize="{StaticResource FontSizeMedium}"
                                                   FontFamily="{DynamicResource DynamicFontFamilyBold}"
                                                   Opacity="0.9" />
                                    </cards:FormCard.Header>
                                    <StackPanel Margin="10">

                                        <!-- Engine / Transmission Types-->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Engine -->
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource EngineStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="{DynamicResource OptionalStr}"
                                                               Style="{DynamicResource OptionalLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox  ItemsSource="{Binding EngineTypesCollection}"
                                                               x:Name="engineCombo"
                                                               SelectedItem="{Binding SelectedEngineType}"
                                                               Panel.ZIndex="0">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:EngineTypeDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>

                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=engineCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Transmission -->
                                            <StackPanel Grid.Column="2">
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource TransmissionTypeStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="{DynamicResource OptionalStr}"
                                                               Style="{DynamicResource OptionalLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox ItemsSource="{Binding TransmissionTypesCollection}"
                                                              x:Name="transmissionCombo"
                                                              SelectedItem="{Binding SelectedTransmission, UpdateSourceTrigger=PropertyChanged}"
                                                              Panel.ZIndex="0">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:TransmissionTypeDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=transmissionCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Trims / Body Types-->
                                        <Grid Margin="0,20,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Trim Level -->
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource TrimLevelStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="{DynamicResource OptionalStr}"
                                                               Style="{DynamicResource OptionalLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox ItemsSource="{Binding TrimLevelsCollection}"
                                                              x:Name="trimLevelsCombo"
                                                              SelectedItem="{Binding SelectedTrimLevel, UpdateSourceTrigger=PropertyChanged}"
                                                              Panel.ZIndex="0">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:TrimLevelDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=trimLevelsCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Body Type -->
                                            <StackPanel Grid.Column="2">
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                    <TextBlock Text="{DynamicResource BodyTypeStr}"
                                                               Style="{DynamicResource FieldLabel}" />
                                                    <TextBlock Text="{DynamicResource OptionalStr}"
                                                               Style="{DynamicResource OptionalLabel}" />
                                                </StackPanel>
                                                <Grid>
                                                    <ComboBox ItemsSource="{Binding BodyTypesCollection}"
                                                              x:Name="bodyTypesCombo"
                                                              SelectedItem="{Binding SelectedBodyType, UpdateSourceTrigger=PropertyChanged}"
                                                              Panel.ZIndex="0">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type dtos:BodyTypeDto}">
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                                     IsHitTestVisible="False"
                                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                                     FontSize="14"
                                                                     Padding="8,5"
                                                                     Margin="5,0,0,0"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource GrayBrush}"
                                                                     Panel.ZIndex="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Hidden" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=bodyTypesCombo,Path=SelectedItem}"
                                                                                 Value="{x:Null}">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </wpfUi:TextBlock>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </cards:FormCard>

                            </Grid>
                        </Grid>
                    </Border>
                </ScrollViewer>

                <!-- Buttons -->
                <Grid Grid.Row="2"
                      Margin="10,15,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <xBtn:XButton Grid.Column="0"
                                  ButtonType="Secondary"
                                  Visibility="{Binding BackButtonVisibility}"
                                  Command="{Binding GoToPreviousStepCommand}"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="ArrowLeft48" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource BackStr}"
                                       FontFamily="{DynamicResource DynamicFontFamilyRegular}"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Margin="5,0,0,0" />
                        </StackPanel>
                    </xBtn:XButton>

                    <!-- Cancel Button -->
                    <xBtn:XButton Grid.Column="0"
                                  ButtonType="Secondary"
                                  Visibility="{Binding CancelButtonVisibility}"
                                  Command="{Binding CancelCommand}"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource CancelStr}"
                                       FontFamily="{DynamicResource DynamicFontFamilyRegular}"
                                       VerticalAlignment="Center"
                                       LineHeight="15" />
                            <wpfUi:SymbolIcon Symbol="Dismiss48"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center" />


                        </StackPanel>
                    </xBtn:XButton>

                    <!-- Next Button -->
                    <xBtn:XButton Grid.Column="2"
                                  ButtonType="Primary"
                                  Visibility="{Binding NextButtonVisibility}"
                                  Command="{Binding GoToNextStepCommand}"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{DynamicResource NextStr}"
                                       FontFamily="{DynamicResource DynamicFontFamilyRegular}"
                                       VerticalAlignment="Center"
                                       LineHeight="15"
                                       />
                            <wpfUi:SymbolIcon Symbol="{Binding NextButtonIcon}"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center">
                            </wpfUi:SymbolIcon>

                        </StackPanel>
                    </xBtn:XButton>

                    <!-- Finish Button -->
                    <xBtn:XButton Grid.Column="2"
                                  ButtonType="Warning"
                                  Visibility="{Binding FinishButtonVisibility}"
                                  IsLoading="{Binding IsEditing}"
                                  Command="{Binding EditCompatibleVehicleCommand}"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{DynamicResource EditVehicleStr}" 
                                       FontFamily="{DynamicResource DynamicFontFamilyRegular}" 
                                       VerticalAlignment="Center"
                                       FontSize="14"/>
                            <wpfUi:SymbolIcon Symbol="Checkmark48"
                                              VerticalAlignment="Center"
                                              Margin="5,0,0,0" />
                        </StackPanel>
                    </xBtn:XButton>
                </Grid>

                <!-- Loading Overlay -->
                <Grid Grid.Row="0"
                      Grid.RowSpan="4"
                      Background="#80000000"
                      Visibility="{Binding LoadingVisibility}">
                    <spinner:DonutSpinner Width="50"
                                          Height="50" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>