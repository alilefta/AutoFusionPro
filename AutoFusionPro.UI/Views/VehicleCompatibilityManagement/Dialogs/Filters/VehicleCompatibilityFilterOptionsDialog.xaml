<Window x:Class="AutoFusionPro.UI.Views.VehicleCompatibilityManagement.Dialogs.Filters.VehicleCompatibilityFilterOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.VehicleCompatibilityManagement.Dialogs.Filters"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
        xmlns:dtos="clr-namespace:AutoFusionPro.Application.DTOs.CompatibleVehicleDTOs;assembly=AutoFusionPro.Application"
        xmlns:spinner="clr-namespace:AutoFusionPro.UI.Controls.LoadingSpinners"
        xmlns:behaviors="clr-namespace:AutoFusionPro.UI.Resources.Behaviors"
        xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AutoFusionPro.UI.Views.VehicleCompatibilityManagement.Dialogs.Filters"
        xmlns:forms="clr-namespace:AutoFusionPro.UI.Controls.Forms"
        xmlns:cards="clr-namespace:AutoFusionPro.UI.Controls.Cards"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Card.Header.BackgroundBrush}"
        Foreground="{DynamicResource Text.PrimaryBrush}"
        Title="{DynamicResource ChnageFilterOptionsStr}"
        Height="580"
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance Type=vm:VehicleCompatibilityFilterOptionsDialogViewModel}"
        FontFamily="{DynamicResource DynamicFontFamilyRegular}"
        FlowDirection="{Binding CurrentWorkFlow}">
    <Window.Resources>
        <DropShadowEffect x:Key="WindowShadow"
                          BlurRadius="15"
                          Direction="0"
                          ShadowDepth="3"
                          Opacity="0.5"
                          Color="#202020" />
        <Style x:Key="FieldLabel"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{DynamicResource DynamicFontFamilyBold}" />
            <Setter Property="FontSize"
                    Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Card.Header.ForegroundBrush}" />
            <Setter Property="Opacity"
                    Value="0.9" />

        </Style>
    </Window.Resources>

    <!-- Window Chrome for custom title bar behavior -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8"
            Background="{DynamicResource Card.Header.BackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Card.BorderBrush}"
            Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!-- Custom title bar -->
                <RowDefinition Height="*" />
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0"
                  Background="{DynamicResource Window.BackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title and Icon -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                    <wpfUi:SymbolIcon Symbol="VehicleCarProfileLtr24"
                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                      FontSize="18"
                                      Margin="0,0,8,0" />
                    <TextBlock Text="{DynamicResource FilterContentStr}"
                               FontSize="14"
                               FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                               Foreground="{DynamicResource Text.PrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Draggable region -->
                <Grid Grid.Column="1"
                      Background="Transparent"
                      WindowChrome.IsHitTestVisibleInChrome="False" />

                <!-- Window control buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0">
                    <!-- Close button -->
                    <Button Width="30"
                            Height="30"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource {x:Type Button}}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="4">
                                    <wpfUi:SymbolIcon x:Name="icon"
                                                      Symbol="Dismiss48"
                                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                                      FontSize="12" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#E81123" />
                                        <Setter TargetName="icon"
                                                Property="Foreground"
                                                Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1"
                  Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Form Fields -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <wpfUi:CardExpander>
                            <wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{DynamicResource FilterByMakeModelTrimStr}" />
                                    <Ellipse Width="10" 
                                             Grid.Column="1"
                                             Height="10"
                                             Margin="0,0,15,0"
                                             Visibility="{Binding IsMakeModelTrimFilterActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Fill="{DynamicResource Border.ErrorBrush}" />
                                </Grid>
                            </wpfUi:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- Make -->
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource MakeStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />
                                    <Grid>
                                        <ComboBox ItemsSource="{Binding MakesCollection}"
                                                  x:Name="makesCombo"
                                                  SelectedItem="{Binding SelectedMake}"
                                                  Panel.ZIndex="0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type dtos:MakeDto}">
                                                    <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                         IsHitTestVisible="False"
                                                         FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                         FontSize="14"
                                                         Padding="8,5"
                                                         Margin="5,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource GrayBrush}"
                                                         Panel.ZIndex="1">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Hidden" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=makesCombo,Path=SelectedItem}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </wpfUi:TextBlock>-->
                                    </Grid>
                                </StackPanel>

                                <!-- Model -->
                                <StackPanel Margin="15,0,0,0"
                                            Grid.Column="1">
                                    <TextBlock Text="{DynamicResource ModelStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />
                                    <Grid>
                                        <ComboBox ItemsSource="{Binding ModelsCollection}"
                                                  x:Name="modelsCombo"
                                                  SelectedItem="{Binding SelectedModel}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type dtos:ModelDto}">
                                                    <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                         IsHitTestVisible="False"
                                                         FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                         FontSize="14"
                                                         Padding="8,5"
                                                         Margin="5,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource GrayBrush}"
                                                         Panel.ZIndex="1">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Hidden" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=modelsCombo,Path=SelectedItem}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </wpfUi:TextBlock>-->
                                    </Grid>
                                </StackPanel>

                                <!-- Trim Level -->
                                <StackPanel Margin="15,0,0,0"
                                            Grid.Column="2">
                                    <TextBlock Text="{DynamicResource TrimLevelStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />
                                    <Grid>
                                        <ComboBox ItemsSource="{Binding TrimLevelsCollection}"
                                                  x:Name="trimLevelsCombo"
                                                  SelectedItem="{Binding SelectedTrimLevel, UpdateSourceTrigger=PropertyChanged}"
                                                  Panel.ZIndex="0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type dtos:TrimLevelDto}">
                                                    <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                         IsHitTestVisible="False"
                                                         FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                         FontSize="14"
                                                         Padding="8,5"
                                                         Margin="5,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource GrayBrush}"
                                                         Panel.ZIndex="1">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Hidden" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=trimLevelsCombo,Path=SelectedItem}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </wpfUi:TextBlock>-->
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </wpfUi:CardExpander>

                        <wpfUi:CardExpander Margin="0,5,0,0">
                            <wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{DynamicResource FilterByTransmissionTypesStr}" />
                                    <Ellipse Width="10"
                                             Grid.Column="1"
                                             Height="10"
                                             Margin="0,0,15,0"
                                             Visibility="{Binding IsTransmissionTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Fill="{DynamicResource Border.ErrorBrush}" />
                                </Grid>
                            </wpfUi:CardExpander.Header>
                            <!-- Transmission -->
                            <StackPanel Grid.Column="2" Margin="10,0">
                                <!--<TextBlock Text="{DynamicResource TransmissionTypeStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />-->
                                <Grid>
                                    <ComboBox ItemsSource="{Binding TransmissionTypesCollection}"
                                              x:Name="transmissionCombo"
                                              SelectedItem="{Binding SelectedTransmission, UpdateSourceTrigger=PropertyChanged}"
                                              Panel.ZIndex="0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate DataType="{x:Type dtos:TransmissionTypeDto}">
                                                <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                     IsHitTestVisible="False"
                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                     FontSize="14"
                                                     Padding="8,5"
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource GrayBrush}"
                                                     Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=transmissionCombo,Path=SelectedItem}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </wpfUi:TextBlock>-->
                                </Grid>
                            </StackPanel>
                        </wpfUi:CardExpander>

                        <wpfUi:CardExpander Margin="0,5,0,0">
                            <wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{DynamicResource FilterByEngineTypesStr}" />
                                    <Ellipse Width="10"
                                             Grid.Column="1"
                                             Height="10"
                                             Margin="0,0,15,0"
                                             Visibility="{Binding IsEngineTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Fill="{DynamicResource Border.ErrorBrush}" />
                                </Grid>
                            </wpfUi:CardExpander.Header>
                            <!-- Engine -->
                            <StackPanel Margin="10,0">
                                <!--<TextBlock Text="{DynamicResource EngineStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />-->
                                <Grid>
                                    <ComboBox  ItemsSource="{Binding EngineTypesCollection}"
                                               x:Name="engineCombo"
                                               SelectedItem="{Binding SelectedEngineType}"
                                               Panel.ZIndex="0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate DataType="{x:Type dtos:EngineTypeDto}">
                                                <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                     IsHitTestVisible="False"
                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                     FontSize="14"
                                                     Padding="8,5"
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource GrayBrush}"
                                                     Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=engineCombo,Path=SelectedItem}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </wpfUi:TextBlock>-->
                                </Grid>
                            </StackPanel>
                        </wpfUi:CardExpander>

                        <wpfUi:CardExpander Margin="0,5,0,0">
                            <wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{DynamicResource FilterByBodyTypesStr}" />
                                    <Ellipse Width="10"
                                             Grid.Column="1"
                                             Height="10"
                                             Margin="0,0,15,0"
                                             Visibility="{Binding IsBodyTypeSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Fill="{DynamicResource Border.ErrorBrush}" />
                                </Grid>
                            </wpfUi:CardExpander.Header>
                            <!-- Body Type -->
                            <StackPanel Margin="10,0">
                                <!--<TextBlock Text="{DynamicResource BodyTypeStr}"
                                               Margin="0,0,0,8"
                                               Style="{DynamicResource FieldLabel}" />-->
                                <Grid>
                                    <ComboBox ItemsSource="{Binding BodyTypesCollection}"
                                              x:Name="bodyTypesCombo"
                                              SelectedItem="{Binding SelectedBodyType, UpdateSourceTrigger=PropertyChanged}"
                                              Panel.ZIndex="0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate DataType="{x:Type dtos:BodyTypeDto}">
                                                <TextBlock Text="{Binding Name, Converter={StaticResource EmptyStringToFilterOptionAllConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <!--<wpfUi:TextBlock Text="{DynamicResource SelectSomethingStr}"
                                                     IsHitTestVisible="False"
                                                     FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                                     FontSize="14"
                                                     Padding="8,5"
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource GrayBrush}"
                                                     Panel.ZIndex="1">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=bodyTypesCombo,Path=SelectedItem}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </wpfUi:TextBlock>-->
                                </Grid>
                            </StackPanel>
                        </wpfUi:CardExpander>

                        <wpfUi:CardExpander Margin="0,5,0,0">
                            <wpfUi:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{DynamicResource FilterByYearStr}" />
                                    <Ellipse Width="10"
                                             Grid.Column="1"
                                             Height="10"
                                             Margin="0,0,15,0"
                                             Visibility="{Binding IsExactYearSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Fill="{DynamicResource Border.ErrorBrush}" />
                                </Grid>
                            </wpfUi:CardExpander.Header>
                            <StackPanel  Margin="10,0">
                                <!--<forms:CustomCombobox ItemsSource="{Binding YearsCollection}"
                                                      SelectedItem="{Binding SelectedExactYear, UpdateSourceTrigger=PropertyChanged}" />-->
                                <wpfUi:TextBox Text="{Binding SelectedExactYear, UpdateSourceTrigger=PropertyChanged}"
                                               PlaceholderText="{DynamicResource YearExampleStr}" Icon="{wpfUi:SymbolIcon Symbol=CalendarAdd28, Filled=False}"/>
                            </StackPanel>
                        </wpfUi:CardExpander>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal"
                            Margin="0,15,0,0"
                            Grid.Row="1">
                    <!-- Apply Filters-->
                    <xBtn:XButton Style="{DynamicResource RegularButtonStyle}"
                                  ButtonType="Info"
                                  Command="{Binding ApplyFiltersCommand}"
                                  IsLoading="{Binding IsApplyingFilters}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="Filter24"
                                              FontSize="18"
                                              Margin="0,0,8,0" />
                            <TextBlock Text="{DynamicResource ApplyFiltersStr}"
                                       FontSize="14"
                                       FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </xBtn:XButton>

                    <!-- Reset and Close-->
                    <xBtn:XButton Style="{DynamicResource RegularButtonStyle}" Margin="5,0,0,0"
                                  Grid.Row="1"
                                  ButtonType="Secondary"
                                  Command="{Binding ResetAndClearFiltersCommand}"
                                  IsLoading="{Binding IsApplyingFilters}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="Filter24"
                                              FontSize="18"
                                              Margin="0,0,8,0" />
                            <TextBlock Text="{DynamicResource ClearAllFiltersStr}"
                                       FontSize="14"
                                       FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </xBtn:XButton>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>