<Window x:Class="AutoFusionPro.UI.Views.VehicleCompatibilityManagement.Dialogs.AddTrimLevelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.VehicleCompatibilityManagement.Dialogs"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
        xmlns:spinner="clr-namespace:AutoFusionPro.UI.Controls.LoadingSpinners"
        xmlns:behaviors="clr-namespace:AutoFusionPro.UI.Resources.Behaviors"
        xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AutoFusionPro.UI.Views.VehicleCompatibilityManagement.Dialogs"
        xmlns:forms="clr-namespace:AutoFusionPro.UI.Controls.Forms"
        xmlns:cards="clr-namespace:AutoFusionPro.UI.Controls.Cards"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Card.Header.BackgroundBrush}"
        Foreground="{DynamicResource Text.PrimaryBrush}"
        Title="{DynamicResource AddTrimLevelStr}"
        Height="220"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance Type=vm:AddTrimLevelDialogViewModel}"
        FontFamily="{DynamicResource DynamicFontFamilyRegular}"
        FlowDirection="{Binding CurrentWorkFlow}">
    <Window.Resources>
        <DropShadowEffect x:Key="WindowShadow"
                          BlurRadius="15"
                          Direction="0"
                          ShadowDepth="3"
                          Opacity="0.5"
                          Color="#202020" />
    </Window.Resources>

    <!-- Window Chrome for custom title bar behavior -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8"
            Background="{DynamicResource Card.Header.BackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Card.BorderBrush}"
            Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!-- Custom title bar -->
                <RowDefinition Height="*" />
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0"
                  Background="{DynamicResource Window.BackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title and Icon -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                    <wpfUi:SymbolIcon Symbol="VehicleCarProfileLtr24"
                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                      FontSize="18"
                                      Margin="0,0,8,0" />
                    <TextBlock Text="{DynamicResource AddTrimLevelStr}"
                               FontSize="14"
                               FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                               Foreground="{DynamicResource Text.PrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Draggable region -->
                <Grid Grid.Column="1"
                      Background="Transparent"
                      WindowChrome.IsHitTestVisibleInChrome="False" />

                <!-- Window control buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0">
                    <!-- Close button -->
                    <Button Width="30"
                            Height="30"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource {x:Type Button}}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="4">
                                    <wpfUi:SymbolIcon x:Name="icon"
                                                      Symbol="Dismiss48"
                                                      Foreground="{DynamicResource Text.PrimaryBrush}"
                                                      FontSize="12" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#E81123" />
                                        <Setter TargetName="icon"
                                                Property="Foreground"
                                                Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1"
                  Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Form Field -->
                <StackPanel Margin="10,6" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource NewTrimLevelForStr}"
                                   FontFamily="{DynamicResource DynamicFontFamilyBold}" />
                        <TextBlock Text="{Binding Model.Name}"
                                   Margin="2,0,0,0"
                                   Foreground="{DynamicResource Accent.Amethyst.BackgroundBrush}"
                                   FontFamily="{DynamicResource DynamicFontFamilyBold}" />
                    </StackPanel>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource TrimLevelNameStr}"
                                   VerticalAlignment="Center" />
                        <wpfUi:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       PlaceholderText="E.g., SV, SL..." />
                    </Grid>

                </StackPanel>

                <!-- Button-->
                <xBtn:XButton Style="{DynamicResource RegularButtonStyle}"
                              Grid.Row="1"
                              VerticalAlignment="Bottom"
                              Margin="0,15,0,0"
                              ButtonType="Info"
                              Command="{Binding AddTrimCommand}"
                              IsLoading="{Binding IsAdding}">
                    <StackPanel Orientation="Horizontal">
                        <wpfUi:SymbolIcon Symbol="Add48"
                                          FontSize="18"
                                          Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource AddTrimLevelStr}"
                                   FontSize="14"
                                   FontFamily="{DynamicResource DynamicFontFamilyMedium}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </xBtn:XButton>
            </Grid>
        </Grid>
    </Border>
</Window>

