<UserControl x:Class="AutoFusionPro.UI.Views.Categories.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:AutoFusionPro.UI.ViewModels.Categories"
             xmlns:xBtn="clr-namespace:AutoFusionPro.UI.Controls.Buttons"
             xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CategoriesViewModel}"
             d:DesignHeight="550"
             d:DesignWidth="1200"
             Background="{DynamicResource Window.BackgroundBrush}"
             FlowDirection="{Binding CurrentWorkFlow}"
             Foreground="{DynamicResource Text.PrimaryBrush}"
             FontFamily="{DynamicResource DynamicFontFamilyRegular}">
    <Border Padding="8,10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Search, Filters and Action Buttons -->
            <Grid Margin="8,0,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--<wpfUi:TextBox Icon="{wpfUi:SymbolIcon Symbol=Search48}" PlaceholderText="Search for Parts By Name, Car Model, Part Number"/>-->
                <TextBox Style="{StaticResource SearchFieldWithClearButtonStyle}"
                         Grid.Column="0"
                         Tag="Search for Parts By Name, Car Model, Part Number" />


                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            Margin="8,0,0,0">

                    <!--<xBtn:XButton ButtonType="Light"
                                  IsLoading="False"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="WrenchScrewdriver24"
                                              FontSize="12" />
                            <TextBlock Text="Filters"
                                       FontSize="12"
                                       Margin="5,0,0,0" />
                        </StackPanel>
                    </xBtn:XButton>-->

                    <xBtn:XButton ButtonType="Primary"
                                  IsLoading="{Binding IsAddingPart}"
                                  Margin="8,0,0,0"
                                  Command="{Binding ShowAddPartDialogCommand}"
                                  Style="{StaticResource RegularButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <wpfUi:SymbolIcon Symbol="Add48"
                                              FontSize="12" />
                            <TextBlock Text="Add New Category"
                                       FontSize="12"
                                       Margin="5,0,0,0" />
                        </StackPanel>
                    </xBtn:XButton>
                </StackPanel>

            </Grid>


            <!-- Categories -->
            <Grid Grid.Row="1"
                  Margin="5,10">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Border.SecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,3"
                                    Margin="3,3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Image Path here -->
                                    <Border Width="80" Height="80">
                                        <Grid>
                                            <Image Source="{Binding ImagePath}" />
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Content Here -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}"
                                                   TextWrapping="Wrap"
                                                   FontFamily="{DynamicResource DynamicFontFamilyRegular}"
                                                   FontSize="12" />
                                        <Button Grid.Column="1"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="2"
                                                Cursor="Hand"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Command="{Binding DataContext.RemoveFilterCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Remove Filter">
                                            <wpfUi:SymbolIcon Symbol="Dismiss48"
                                                              Margin="5,0,0,0"
                                                              FontSize="10" />
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            
            <StatusBar Grid.Row="4">
                <StatusBarItem>
                    <TextBlock Text="{Binding Items.Count, FallbackValue='Total Items: 20', ElementName=PartsDataGrid, StringFormat='Total Items: {0}'}" />
                </StatusBarItem>
                <Separator />
                <StatusBarItem>
                    <TextBlock Text="{Binding TotalValue, FallbackValue='Total Inventory Value: 20', StringFormat='Total Inventory Value: {0:C2}'}" />
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <ProgressBar Width="100"
                                 Height="15"
                                 IsIndeterminate="{Binding IsLoading}"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>
</UserControl>
