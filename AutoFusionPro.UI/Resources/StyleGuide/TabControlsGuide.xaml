<UserControl x:Class="AutoFusionPro.UI.Resources.StyleGuide.TabControlsGuide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoFusionPro.UI.Resources.StyleGuide"
             xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DesignWidth="800"
             mc:Ignorable="d"
             Background="{DynamicResource AppBackgroundBrush}">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <TabControl Style="{StaticResource ModernAnimatedTabControlStyle}"
                        Grid.Row="0"
                        Margin="16">
                <TabItem Header="Dashboard">
                    <Grid Background="White">
                        <TextBlock Text="Dashboard Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem Header="Patients">
                    <Grid Background="White">
                        <TextBlock Text="Patients Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem Header="Appointments">
                    <Grid Background="White">
                        <TextBlock Text="Appointments Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem Header="Medical Records">
                    <Grid Background="White">
                        <TextBlock Text="Medical Records Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem Header="Billing">
                    <Grid Background="White">
                        <TextBlock Text="Billing Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
            </TabControl>
            <TabControl Style="{StaticResource ModernAnimatedTabControlStyle}"
                        Grid.Row="1"
                        Margin="16">
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="16"
                                    Height="16"
                                    Background="#4CAF50"
                                    CornerRadius="8"
                                    Margin="0,0,8,0" />
                            <TextBlock Text="Dashboard" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Dashboard"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16" />

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Example Content Cards -->
                            <Border Grid.Column="0"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Today's Appointments"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="12"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#4CAF50" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Pending Reports"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="5"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#FFC107" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Today's Revenue"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="$1,250"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#2196F3" />
                                </StackPanel>
                            </Border>

                            <!-- Chart Placeholder -->
                            <Border Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Grid.Row="1"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <Grid>
                                    <TextBlock Text="Weekly Statistics"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top" />
                                    <Rectangle Height="200"
                                               Fill="#F5F5F5"
                                               Margin="0,32,0,0" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="16"
                                    Height="16"
                                    Background="#4CAF50"
                                    CornerRadius="8"
                                    Margin="0,0,8,0" />
                            <TextBlock Text="Dashboard" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Dashboard"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16" />

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Example Content Cards -->
                            <Border Grid.Column="0"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Today's Appointments"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="12"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#4CAF50" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Pending Reports"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="5"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#FFC107" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2"
                                    Grid.Row="0"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <StackPanel>
                                    <TextBlock Text="Today's Revenue"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="$1,250"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#2196F3" />
                                </StackPanel>
                            </Border>

                            <!-- Chart Placeholder -->
                            <Border Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Grid.Row="1"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="8"
                                    Padding="16"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <Grid>
                                    <TextBlock Text="Weekly Statistics"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top" />
                                    <Rectangle Height="200"
                                               Fill="#F5F5F5"
                                               Margin="0,32,0,0" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            <TabControl Style="{StaticResource ModernVerticalTabControlStyle}"
                        Grid.Row="2"
                        Width="200"
                        Margin="0">
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="General Settings" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="White">
                        <TextBlock Text="General Settings Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE136;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="User Accounts" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="White">
                        <TextBlock Text="User Accounts Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE1CF;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Templates" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="White">
                        <TextBlock Text="Templates Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE12A;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Backup &amp; Restore" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="White">
                        <TextBlock Text="Backup &amp; Restore Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE142;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="About" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="White">
                        <TextBlock Text="About Content"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
            </TabControl>
            <Grid Grid.Row="3">
                <TabControl Style="{StaticResource CompactBottomTabControlStyle}"
                            Margin="16">
                    <TabItem Header="Overview">
                        <Grid>
                            <TextBlock Text="Patient Overview Content"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Visits">
                        <Grid>
                            <TextBlock Text="Visits History Content"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Prescriptions">
                        <Grid>
                            <TextBlock Text="Prescriptions Content"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Lab Results">
                        <Grid>
                            <TextBlock Text="Lab Results Content"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Documents">
                        <Grid>
                            <TextBlock Text="Documents Content"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>

