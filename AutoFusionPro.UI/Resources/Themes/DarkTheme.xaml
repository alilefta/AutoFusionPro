<!-- ============================================ -->
<!--      Resources/Themes/DarkTheme.xaml         -->
<!-- ============================================ -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpfUi="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- ==================== Base ==================== -->
    <SolidColorBrush x:Key="Window.BackgroundBrush"
                     Color="{StaticResource Neutral990}" />
    <SolidColorBrush x:Key="Content.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    <!-- Card/Dialog Bodies -->
    <SolidColorBrush x:Key="Sidebar.BackgroundBrush"
                     Color="{StaticResource Neutral975}" />
    <SolidColorBrush x:Key="Header.BackgroundBrush"
                     Color="{StaticResource Neutral925}" />
    <SolidColorBrush x:Key="Toolbar.BackgroundBrush"
                     Color="{StaticResource Neutral925}" />
    <SolidColorBrush x:Key="StatusBar.BackgroundBrush"
                     Color="{StaticResource Neutral925}" />
    
    <!-- Dialogs -->
    <SolidColorBrush x:Key="Dialog.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    
    <SolidColorBrush x:Key="Dialog.Title.ForegroundBrush"
                     Color="{StaticResource Neutral100}" />
    
    <SolidColorBrush x:Key="Dialog.Subtitle.ForegroundBrush"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="Dialog.ForegroundBrush"
                     Color="{StaticResource Neutral350}" />

    <!-- ToolTips -->
    <SolidColorBrush x:Key="Tooltip.BackgroundBrush"
                     Color="{StaticResource Neutral150}" />
    <SolidColorBrush x:Key="Tooltip.ForegroundBrush"
                     Color="{StaticResource Neutral800}" />

    <!-- ==================== Text ==================== -->
    <SolidColorBrush x:Key="Text.PrimaryBrush"
                     Color="{StaticResource Neutral100}" />
    <!-- Main Body -->
    <SolidColorBrush x:Key="Text.SecondaryBrush"
                     Color="{StaticResource Neutral400}" />
    <!-- Subtle -->
    <SolidColorBrush x:Key="Text.HeaderBrush"
                     Color="{StaticResource Neutral50}" />

    <SolidColorBrush x:Key="Text.Optional" Color="{StaticResource Neutral600}"/>
    <!-- Lighter Header -->
    <SolidColorBrush x:Key="Text.DisabledBrush"
                     Color="{StaticResource Neutral650}" />
    <SolidColorBrush x:Key="Text.LinkBrush"
                     Color="{StaticResource Link600}" />
    <SolidColorBrush x:Key="Text.AccentBrush"
                     Color="{StaticResource Primary300}" />
    <!-- Text on accent bg -->
    <SolidColorBrush x:Key="Text.ErrorBrush"
                     Color="{StaticResource Error600}" />
    <SolidColorBrush x:Key="Text.SuccessBrush"
                     Color="{StaticResource Success600}" />
    <SolidColorBrush x:Key="Text.WarningBrush"
                     Color="{StaticResource Warning500}" />
    <SolidColorBrush x:Key="Text.InfoBrush"
                     Color="{StaticResource Info600}" />
    <SolidColorBrush x:Key="Text.OnPrimaryBrush"
                     Color="{StaticResource Neutral0}" />
    <!-- Text on Primary Button -->
    <SolidColorBrush x:Key="Text.OnAccentBrush"
                     Color="{StaticResource Neutral0}" />
    <!-- Text on Accent Button/BG -->

    <!-- ==================== Borders & Dividers ==================== -->
    <SolidColorBrush x:Key="Border.PrimaryBrush"
                     Color="{StaticResource Neutral800}" />
    <!-- Default Borders -->
    <SolidColorBrush x:Key="Border.SecondaryBrush"
                     Color="{StaticResource Neutral700}" />
    <!-- Dividers -->
    <SolidColorBrush x:Key="Border.FocusBrush"
                     Color="{StaticResource Primary500}" />
    <!-- Input Focus -->
    <SolidColorBrush x:Key="Border.ErrorBrush"
                     Color="{StaticResource Error600}" />
    <SolidColorBrush x:Key="Border.AccentBrush"
                     Color="{StaticResource Primary400}" />
    <!-- e.g., Selected Tab -->

    <!-- ==================== Controls General ==================== -->
    <SolidColorBrush x:Key="Control.Background.HoverBrush"
                     Color="{StaticResource Neutral850}" />
    <SolidColorBrush x:Key="Control.Background.PressedBrush"
                     Color="{StaticResource Neutral750}" />
    <SolidColorBrush x:Key="Control.Background.SelectedBrush"
                     Color="{StaticResource Primary975}" />
    <SolidColorBrush x:Key="Control.Background.DisabledBrush"
                     Color="{StaticResource Neutral900}" />



    <!-- ==================== Toogle Button ==================== -->
    <SolidColorBrush x:Key="ToggleButton.BackgroundBrush"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="ToggleButton.Thumb.BackgroundBrush"
                     Color="{StaticResource Success500}" />


    <!-- ==================== Tab Controls ==================== -->

    <!-- Normal -->
    <SolidColorBrush x:Key="TabView.BackgroundBrush"
                     Color="{StaticResource Neutral800}" />

    <SolidColorBrush x:Key="TabView.BorderBrush"
                     Color="{StaticResource Neutral600}" />

    <SolidColorBrush x:Key="TabViewItem.ForegroundBrush"
                     Color="{StaticResource Neutral600}" />

    <SolidColorBrush x:Key="TabViewItem.Header.BackgroundBrush"
                     Color="{StaticResource SubtleFillColorTransparent}" />


    <!-- Selected -->
    <SolidColorBrush x:Key="TabViewItem.Selected.ForegroundBrush"
                     Color="{StaticResource Primary400}" />
    <SolidColorBrush x:Key="TabViewItem.Selected.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />

    <SolidColorBrush x:Key="TabViewItem.Selected.BorderBrush"
                     Color="{StaticResource Primary400}" />

    <SolidColorBrush x:Key="TabViewItem.Header.Selected.ForegroundBrush"
                     Color="{StaticResource Primary600}" />

    <!-- Hover -->
    <SolidColorBrush x:Key="TabViewItem.ForegroundBrush.Hover"
                     Color="{StaticResource Neutral500}" />
    <SolidColorBrush x:Key="TabViewItem.BackgroundBrush.Hover"
                     Color="{StaticResource Neutral800}" />
    
    <!-- ==================== Loading Indicator ==================== -->
    <SolidColorBrush x:Key="LoadingIndicator.BackgroundBrush"
                     Color="{StaticResource Primary800}" />


    <!-- ==================== Button: Default (Dark Appearance) ==================== -->
    <SolidColorBrush x:Key="Button.Default.BackgroundBrush"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="Button.Default.ForegroundBrush"
                     Color="{StaticResource Neutral100}" />
    <SolidColorBrush x:Key="Button.Default.BorderBrush"
                     Color="{StaticResource Neutral700}" />
    <SolidColorBrush x:Key="Button.Default.Background.HoverBrush"
                     Color="{StaticResource Neutral750}" />
    <SolidColorBrush x:Key="Button.Default.Background.PressedBrush"
                     Color="{StaticResource Neutral700}" />
    <SolidColorBrush x:Key="Button.Default.Background.DisabledBrush"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="Button.Default.Foreground.DisabledBrush"
                     Color="{StaticResource Neutral650}" />
    <SolidColorBrush x:Key="Button.Default.Border.DisabledBrush"
                     Color="{StaticResource Neutral700}" />

    <!-- ==================== Button: Primary ==================== -->
    <SolidColorBrush x:Key="Button.Primary.BackgroundBrush"
                     Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="Button.Primary.ForegroundBrush"
                     Color="{StaticResource Neutral0}" />
    <SolidColorBrush x:Key="Button.Primary.BorderBrush"
                     Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="Button.Primary.Background.HoverBrush"
                     Color="{StaticResource Primary600}" />
    <SolidColorBrush x:Key="Button.Primary.Background.PressedBrush"
                     Color="{StaticResource Primary700}" />
    <SolidColorBrush x:Key="Button.Primary.Background.DisabledBrush"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="Button.Primary.Foreground.DisabledBrush"
                     Color="{StaticResource Neutral600}" />
    <SolidColorBrush x:Key="Button.Primary.Border.DisabledBrush"
                     Color="{StaticResource Neutral800}" />

    <!-- ==================== Button: Secondary, Info, Danger, Light  ==================== -->
    <SolidColorBrush x:Key="Button.Secondary.BackgroundBrush"
                     Color="{StaticResource Neutral500}" />
    
    <SolidColorBrush x:Key="Button.Success.BackgroundBrush"
                     Color="{StaticResource Teal700}" />

    <SolidColorBrush x:Key="Button.Success.ForegroundBrush"
                     Color="{StaticResource Neutral350}" />
    
    

    <SolidColorBrush x:Key="Button.Danger.BackgroundBrush"
                     Color="{StaticResource Error600}" />
    
    <SolidColorBrush x:Key="Button.Warning.BackgroundBrush"
                     Color="{StaticResource Orange400}" />

    <SolidColorBrush x:Key="Button.Warning.ForegroundBrush"
                     Color="{StaticResource Neutral100}" />

    <SolidColorBrush x:Key="Button.Info.BackgroundBrush"
                     Color="{StaticResource Turquoise500}" />
    <SolidColorBrush x:Key="Button.Info.ForegroundBrush"
                     Color="{StaticResource Neutral200}" />


    <SolidColorBrush x:Key="Button.Light.BackgroundBrush"
                     Color="{StaticResource Neutral150}" />

    <SolidColorBrush x:Key="Button.Light.ForegroundBrush"
                     Color="{StaticResource Neutral750}" />

    <SolidColorBrush x:Key="Button.Light.BorderBrush"
                     Color="{StaticResource Neutral750}" />

    <SolidColorBrush x:Key="Button.Link.BackgroundBrush"
                     Color="{StaticResource Primary500}" />
    
    <SolidColorBrush x:Key="Button.Dark.BackgroundBrush"
                     Color="{StaticResource Neutral750}" />

    <SolidColorBrush x:Key="Button.Regular.BackgroundBrush"
                     Color="{StaticResource Neutral800}" />

    <SolidColorBrush x:Key="Button.Regular.ForegroundBrush"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="Button.Regular.BorderBrush"
                     Color="{StaticResource Neutral700}" />


    <!-- ==================== Button: Menu (Side Menu) ==================== -->
    <SolidColorBrush x:Key="Button.Menu.BackgroundBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="Button.Menu.ForegroundBrush"
                     Color="{StaticResource Neutral300}" />
    <!-- Lighter Neutral -->
    <SolidColorBrush x:Key="Button.Menu.BorderBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="Button.Menu.Background.HoverBrush"
                     Color="{StaticResource Neutral850}" />
    <SolidColorBrush x:Key="Button.Menu.Foreground.HoverBrush"
                     Color="{StaticResource Neutral100}" />
    <SolidColorBrush x:Key="Button.Menu.Background.PressedBrush"
                     Color="{StaticResource Neutral750}" />
    <SolidColorBrush x:Key="Button.Menu.Foreground.PressedBrush"
                     Color="{StaticResource Neutral50}" />
    <SolidColorBrush x:Key="Button.Menu.Border.PressedBrush"
                     Color="{StaticResource Neutral700}" />
    
    <SolidColorBrush x:Key="Button.Menu.Background.SelectedBrush"
                     Color="{StaticResource Primary950}" />
    <SolidColorBrush x:Key="Button.Menu.Foreground.SelectedBrush"
                     Color="{StaticResource Primary100}" />
    <SolidColorBrush x:Key="Button.Menu.Border.SelectedBrush"
                     Color="{StaticResource Primary600}" />
    
    <SolidColorBrush x:Key="Button.Menu.Background.DisabledBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="Button.Menu.Foreground.DisabledBrush"
                     Color="{StaticResource Neutral650}" />
    <SolidColorBrush x:Key="Button.Menu.Border.DisabledBrush"
                     Color="Transparent" />

    <!-- ==================== Card (Custom Card) ==================== -->
    <SolidColorBrush x:Key="Card.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    <SolidColorBrush x:Key="Card.BorderBrush"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="Card.Header.BackgroundBrush"
                     Color="{StaticResource Neutral950}" />
    <SolidColorBrush x:Key="Card.Header.ForegroundBrush"
                     Color="{StaticResource Neutral50}" />
    <SolidColorBrush x:Key="Card.Body.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    <SolidColorBrush x:Key="Card.Body.ForegroundBrush"
                     Color="{StaticResource Neutral100}" />

    <!-- ==================== ScrollBar ==================== -->
    <SolidColorBrush x:Key="ScrollBar.Track.BackgroundBrush"
                     Color="{StaticResource Neutral600}" />
    <SolidColorBrush x:Key="ScrollBar.Thumb.BackgroundBrush"
                     Color="{StaticResource Neutral700}" />
    <SolidColorBrush x:Key="ScrollBar.Border.BackgroundBrush"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="ScrollBar.Thumb.Background.HoverBrush"
                     Color="{StaticResource Neutral300}" />
    <SolidColorBrush x:Key="ScrollBar.Thumb.Background.PressedBrush"
                     Color="{StaticResource Neutral500}" />

    <!-- ==================== ProgressBar ==================== -->
    <SolidColorBrush x:Key="ProgressBar.BackgroundBrush"
                     Color="{StaticResource Neutral750}" />
    <SolidColorBrush x:Key="ProgressBar.ForegroundBrush"
                     Color="{StaticResource Primary500}" />
    




    <!-- Search Textbox -->
    <SolidColorBrush x:Key="TextBox.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    <SolidColorBrush x:Key="TextBox.BorderBrush"
                     Color="{StaticResource Neutral700}" />
    <SolidColorBrush x:Key="TextBox.ForegroundBrush"
                     Color="{StaticResource Neutral700}" />
    <SolidColorBrush x:Key="TextBox.Lens.ForegroundBrush"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="TextBox.Focus.BackgroundBrush"
                     Color="{StaticResource Neutral900}" />
    <SolidColorBrush x:Key="TextBox.Focus.BorderBrush"
                     Color="{StaticResource Primary700}" />
    <SolidColorBrush x:Key="TextBox.Focus.ForegroundBrush"
                     Color="{StaticResource Neutral300}" />
    <SolidColorBrush x:Key="TextBox.Focus.Lens.ForegroundBrush"
                     Color="{StaticResource Primary700}" />

    <SolidColorBrush x:Key="TextBox.Hover.BorderBrush"
                     Color="{StaticResource Neutral600}" />


    <!-- ==================== DataGrid ==================== -->
    <SolidColorBrush x:Key="DataGrid.Row.Background.AlternateBrush"
                     Color="{StaticResource Neutral850}" />

    <!-- ==================== Status ==================== -->
    <SolidColorBrush x:Key="Status.Success.BackgroundBrush"
                     Color="{StaticResource Success600}" />
    <SolidColorBrush x:Key="Status.Warning.BackgroundBrush"
                     Color="{StaticResource Warning500}" />
    <SolidColorBrush x:Key="Status.Error.BackgroundBrush"
                     Color="{StaticResource Error600}" />
    <SolidColorBrush x:Key="Status.Info.BackgroundBrush"
                     Color="{StaticResource Info600}" />
    <SolidColorBrush x:Key="Status.ForegroundBrush"
                     Color="{StaticResource Neutral0}" />
    <!-- Text on status bg -->

    <!-- ==================== Clinical Specific ==================== -->
    <SolidColorBrush x:Key="Clinical.Appointment.AvailableBrush"
                     Color="{StaticResource Teal700}" />
    <SolidColorBrush x:Key="Clinical.Appointment.BookedBrush"
                     Color="{StaticResource Coral700}" />
    <!-- Need Darker Coral -->
    <SolidColorBrush x:Key="Clinical.Appointment.UrgentBrush"
                     Color="{StaticResource Coral700}" />
    <!-- Need Darker Coral -->
    <SolidColorBrush x:Key="Clinical.Patient.CriticalBrush"
                     Color="{StaticResource Error600}" />
    <!-- Map to Error -->
    <SolidColorBrush x:Key="Clinical.Patient.StableBrush"
                     Color="{StaticResource Teal700}" />
    <SolidColorBrush x:Key="Clinical.Patient.WarningBrush"
                     Color="{StaticResource Orange700}" />
    <!-- Need Darker Orange/Coral -->

    <!-- ==================== Named Accent Brushes ==================== -->
    <SolidColorBrush x:Key="Accent.Teal.BackgroundBrush"
                     Color="{StaticResource Teal700}" />
    <SolidColorBrush x:Key="Accent.Purple.BackgroundBrush"
                     Color="{StaticResource Purple700}" />
    <SolidColorBrush x:Key="Accent.WarmOrange.BackgroundBrush"
                     Color="{StaticResource WarmOrange700}" />
    <SolidColorBrush x:Key="Accent.Coral.BackgroundBrush"
                     Color="{StaticResource Coral700}" />
    <SolidColorBrush x:Key="Accent.Turquoise.BackgroundBrush"
                     Color="{StaticResource Turquoise700}" />
    <SolidColorBrush x:Key="Accent.Amethyst.BackgroundBrush"
                     Color="{StaticResource Amethyst500}" />
    <!-- Reusing light, no dark provided -->
    <SolidColorBrush x:Key="Accent.Orange.BackgroundBrush"
                     Color="{StaticResource Orange400}" />



    <!-- ==================== Toast Notification ==================== -->
    <!-- Primary -->
    <SolidColorBrush x:Key="Toast.Primary.BackgroundBrush"
                     Color="{StaticResource Primary700}" />
    <SolidColorBrush x:Key="Toast.Primary.ForegroundBrush"
                     Color="{StaticResource Neutral100}" />
    <SolidColorBrush x:Key="Toast.Primary.BorderBrush"
                     Color="{StaticResource Neutral500}" />

    
    <!-- Info -->
    <SolidColorBrush x:Key="Toast.Info.BackgroundBrush"
                     Color="{StaticResource Sky800}" />
    <SolidColorBrush x:Key="Toast.Info.ForegroundBrush"
                     Color="{StaticResource Sky100}" />
    <SolidColorBrush x:Key="Toast.Info.BorderBrush"
                     Color="{StaticResource Sky500}" />

    <!-- Success -->
    <SolidColorBrush x:Key="Toast.Success.BackgroundBrush"
                     Color="{StaticResource Green800}" />
    <SolidColorBrush x:Key="Toast.Success.ForegroundBrush"
                     Color="{StaticResource Green100}" />
    <SolidColorBrush x:Key="Toast.Success.BorderBrush"
                     Color="{StaticResource Green500}" />


    <!-- Danger  -->
    <SolidColorBrush x:Key="Toast.Error.BackgroundBrush"
                     Color="{StaticResource Red800}" />
    <SolidColorBrush x:Key="Toast.Error.ForegroundBrush"
                     Color="{StaticResource Red100}" />
    <SolidColorBrush x:Key="Toast.Error.BorderBrush"
                     Color="{StaticResource Red500}" />

    <!-- Warning  -->
    <SolidColorBrush x:Key="Toast.Warning.BackgroundBrush"
                     Color="{StaticResource Yellow800}" />
    <SolidColorBrush x:Key="Toast.Warning.ForegroundBrush"
                     Color="{StaticResource Yellow100}" />
    <SolidColorBrush x:Key="Toast.Warning.BorderBrush"
                     Color="{StaticResource Amber500}" />

    <!-- Neutral  -->
    <SolidColorBrush x:Key="Toast.Neutral.BackgroundBrush"
                     Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Toast.Neutral.ForegroundBrush"
                     Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Toast.Neutral.BorderBrush"
                     Color="{StaticResource Gray600}" />



    <!-- ==================== Normal Notifications ==================== -->

    <SolidColorBrush x:Key="NotificationCount.ForegroundBrush"
                     Color="{StaticResource Red600}" />

    <SolidColorBrush x:Key="NotificationPopup.BackgroundBrush"
                     Color="{StaticResource Neutral750}" />


    <SolidColorBrush x:Key="NotificationPopup.Heading.ForegroundBrush"
                     Color="{StaticResource Neutral300}" />
    
    <SolidColorBrush x:Key="NotificationPopup.Item.ForegroundBrush"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="NotificationPopup.Item.BackgroundBrush"
                     Color="{StaticResource Orange700}" />

    <SolidColorBrush x:Key="NotificationPopup.BorderBrush"
                     Color="{StaticResource Gray400}" />


    <!-- ==================== Avatar ==================== -->

    <SolidColorBrush x:Key="Avatar.BorderBrush"
                     Color="{StaticResource Amber700}" />


    
    <!-- ==================== Separator ==================== -->

    <SolidColorBrush x:Key="Seprator.BorderBrush"
                     Color="{StaticResource Gray500}" />



    <!-- ==================== Grid View ==================== -->

    <!-- Gripper, the border between the column headers -->
    <SolidColorBrush x:Key="GridColumn.Gripper.BackgroundBrush"
                     Color="{StaticResource Neutral750}" />


    <!-- Column Header - Default -->
    <SolidColorBrush x:Key="GridColumn.Header.Background"
                     Color="{StaticResource Neutral950}" />

    <SolidColorBrush x:Key="GridColumn.Header.Border"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="GridColumn.Header.Foreground"
                     Color="{StaticResource Neutral400}" />

    <!-- Column Header - Hover -->
    <SolidColorBrush x:Key="GridColumn.Header.Hover.Background"
                     Color="{StaticResource Neutral900}" />

    <SolidColorBrush x:Key="GridColumn.Header.Hover.Border"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="GridColumn.Header.Hover.Foreground"
                     Color="{StaticResource Neutral400}" />

    <!-- Column Header - Pressed -->
    <SolidColorBrush x:Key="GridColumn.Header.Pressed.Background"
                     Color="{StaticResource Neutral950}" />

    <SolidColorBrush x:Key="GridColumn.Header.Pressed.Border"
                     Color="{StaticResource Neutral800}" />

    <SolidColorBrush x:Key="GridColumn.Header.Pressed.Foreground"
                     Color="{StaticResource Neutral400}" />

    <!-- ==================== List View Items ==================== -->
    <SolidColorBrush x:Key="ListView.Item.Background"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="ListView.Item.Border"
                     Color="{StaticResource Neutral800}" />

    <SolidColorBrush x:Key="ListView.Item.Foreground"
                     Color="{StaticResource Neutral300}" />

    <SolidColorBrush x:Key="ListView.Item.AlternateRow.0.Foreground"
                     Color="{StaticResource Neutral900}" />

    <SolidColorBrush x:Key="ListView.Item.AlternateRow.1.Foreground"
                     Color="{StaticResource Neutral800}" />


    <!-- Item Hover -->
    <SolidColorBrush x:Key="ListView.Item.Hover.Background"
                     Color="{StaticResource Neutral600}" />

    <SolidColorBrush x:Key="ListView.Item.Hover.BorderBrush"
                     Color="{StaticResource Neutral700}" />
    
    <SolidColorBrush x:Key="ListView.Item.Hover.Foreground"
                     Color="{StaticResource Neutral200}" />

    <!-- Item Pressed (Selected) -->

    <SolidColorBrush x:Key="ListView.Item.Selected.Background"
                     Color="{StaticResource Green800}" />

    <SolidColorBrush x:Key="ListView.Item.Selected.BorderBrush"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="ListView.Item.Selected.Foreground"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="ListView.Item.SelectedHovered.Background"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="ListView.Item.SelectedHovered.BorderBrush"
                     Color="{StaticResource Neutral400}" />

    <!-- General ListView -->
    <SolidColorBrush x:Key="ListView.Background"
                     Color="{StaticResource Neutral950}" />
    <SolidColorBrush x:Key="ListView.BorderBrush"
                     Color="{StaticResource Neutral700}" />



    <!-- ==================== CheckBox ==================== -->
    <SolidColorBrush x:Key="CheckBox.Background"
                     Color="{StaticResource Neutral750}" />
    <SolidColorBrush x:Key="CheckBox.BorderBrush"
                     Color="{StaticResource Gray600}" />


    <SolidColorBrush x:Key="OptionMark.Static.Background"
                     Color="{StaticResource Neutral100}" />
    <SolidColorBrush x:Key="OptionMark.Static.Border"
                     Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="OptionMark.Static.Glyph"
                     Color="{StaticResource Neutral100}" />
    <SolidColorBrush x:Key="OptionMark.MouseOver.Background"
                     Color="{StaticResource Neutral800}" />
    <SolidColorBrush x:Key="OptionMark.MouseOver.Border"
                     Color="{StaticResource Neutral600}" />
    <SolidColorBrush x:Key="OptionMark.MouseOver.Glyph"
                     Color="#FF212121" />
    <SolidColorBrush x:Key="OptionMark.Pressed.Background"
                     Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="OptionMark.Pressed.Border"
                     Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="OptionMark.Pressed.Glyph"
                     Color="#FF212121" />
    <SolidColorBrush x:Key="OptionMark.Disabled.Background"
                     Color="#FFE6E6E6" />
    <SolidColorBrush x:Key="OptionMark.Disabled.Border"
                     Color="#FFBCBCBC" />
    <SolidColorBrush x:Key="OptionMark.Disabled.Glyph"
                     Color="#FF707070" />


    <!-- ==================== Step Indicator ==================== -->

    <SolidColorBrush x:Key="StepIndicator.Default.Background"
                     Color="{StaticResource Neutral700}" />

    <SolidColorBrush x:Key="StepIndicator.Default.Foreground"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="StepIndicator.Current.HeadingForeground"
                     Color="{StaticResource Neutral400}" />

    <SolidColorBrush x:Key="StepIndicator.Current.Background"
                     Color="{StaticResource Primary500}" />

    <SolidColorBrush x:Key="StepIndicator.Current.Foreground"
                     Color="{StaticResource Neutral200}" />


    <SolidColorBrush x:Key="StepIndicator.Passed.Background"
                     Color="{StaticResource Green700}" />

    <SolidColorBrush x:Key="StepIndicator.Passed.Foreground"
                     Color="{StaticResource Neutral200}" />


    <ResourceDictionary.MergedDictionaries>
        <wpfUi:ThemesDictionary Theme="Dark" />
        <wpfUi:ControlsDictionary />
        <ResourceDictionary Source="../Styles/ScrollBar.xaml" />

    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>