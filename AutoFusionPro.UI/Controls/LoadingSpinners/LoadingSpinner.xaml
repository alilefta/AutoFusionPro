<UserControl x:Class="AutoFusionPro.UI.Controls.LoadingSpinners.LoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="LoadingSpinnerSizeSmall"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="24" />
            <Setter Property="Height"
                    Value="24" />
            <Setter Property="StrokeThickness"
                    Value="3" />
        </Style>
        <Style x:Key="LoadingSpinnerSizeMedium"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="48" />
            <Setter Property="Height"
                    Value="48" />
            <Setter Property="StrokeThickness"
                    Value="5" />
        </Style>
        <Style x:Key="LoadingSpinnerSizeLarge"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="80" />
            <Setter Property="Height"
                    Value="80" />
            <Setter Property="StrokeThickness"
                    Value="8" />
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Ellipse x:Name="spinner"
                 Style="{Binding SpinnerStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 RenderTransformOrigin="0.5,0.5"
                 Stroke="{StaticResource PrimaryBrush}"
                 StrokeDashArray="22,16">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="Rotation"
                                 Angle="0" />
            </Ellipse.RenderTransform>

            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation From="0"
                                             To="360"
                                             Storyboard.TargetName="Rotation"
                                             Storyboard.TargetProperty="Angle"
                                             Duration="0:0:1.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
    </Grid>
</UserControl>