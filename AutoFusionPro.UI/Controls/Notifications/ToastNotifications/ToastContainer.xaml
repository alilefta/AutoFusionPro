<UserControl x:Class="AutoFusionPro.UI.Controls.Notifications.ToastNotifications.ToastContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoFusionPro.UI.Controls.Notifications.ToastNotifications"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="300">
    <ItemsControl x:Name="NotificationsItemsControl">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel VerticalAlignment="Bottom" 
                            MinWidth="400"
                            Margin="0,0,0,50" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>