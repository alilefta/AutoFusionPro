<Application x:Class="AutoFusionPro.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AutoFusionPro.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Converters/ValueConverters.xaml" />
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Fonts.xaml" />
                <ResourceDictionary Source="Resources/Styles/ToolTips.xaml" />
                <ResourceDictionary Source="Resources/Styles/Popups.xaml" />
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Resources/Styles/Cards.xaml" />
                <ResourceDictionary Source="Resources/Styles/Texts.xaml" />
                <ResourceDictionary Source="Resources/Styles/TabControls.xaml" />
                <ResourceDictionary Source="Resources/Styles/ListViewStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/GridViewStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/StoryboardStyles.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Resources.en.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Resources.ar.xaml" />
                
                <ResourceDictionary Source="Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
